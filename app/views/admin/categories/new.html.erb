<div class="container-fluid p-0">
  <%= render partial: 'admin/partials/sidebar'%>
  <div class="main">
    <%= render partial: 'admin/partials/header'%>
    <div class="orders">
      <%= form_with(model: [:admin, @category], local: true, multipart: true) do |form| %>
        <div>
          <%= form.label 'Название', class: "form-label" %><br>
          <%= form.text_field :name, class: "form-control" %>
          <% @category.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.submit "Сохранить", class: "btn btn-primary mb-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>