<div class="container-fluid p-0">
  <%= render partial: 'admin/partials/sidebar'%>
  <div class="main">
    <%= render partial: 'admin/partials/header'%>
    <div class="orders">
      <%= form_with model: [:admin, @news], multipart: true do |form| %>
        <div>
          <%= form.label 'Название', class: "form-label" %><br>
          <%= form.text_field :title, class: "form-control" %>
          <% @news.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <% @news.images.each do |image| %>
            <div>
              <%= image_tag image, width: '100px', height: '100px' %>
              <%= check_box_tag "news[images_to_delete][]", image.id %>
              <%= form.label "remove_#{image.id}", 'Remove' %>
            </div>
          <% end %>
        </div>

        <div>
          <%= form.label 'Images', class: 'form-label' %>
          <%= form.file_field :images, multiple: true, class: 'form-control' %>
        </div>

        <div>
          <%= form.label 'Информация', class: "form-label" %><br>
          <%= form.text_area :info, class: "form-control" %><br>
          <% @news.errors.full_messages_for(:info).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.label 'Описание', class: "form-label" %><br>
          <%= form.text_area :body, class: "form-control", rows: 20 %><br>
          <% @news.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.submit "Сохранить", class: "btn btn-primary mb-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>