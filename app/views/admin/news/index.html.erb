<div class="container-fluid p-0">
  <%= render partial: 'admin/partials/sidebar'%>
  <div class="main">
    <%= render partial: 'admin/partials/header'%>
    <div class="orders">
      <%= link_to "Добавить", new_admin_news_path, class: "btn btn-primary mb-3" %>
      <table class="table">
        <thead>
        <tr>
          <th scope="col">Название</th>
          <th scope="col">Описание</th>
          <th scope="col">Информация</th>
          <th scope="col">Дата добавления</th>
        </tr>
        </thead>
        <tbody>
        <% @all_news.each do |news| %>
          <tr>
            <th>
              <a href="<%= admin_news_path(news) %>">
              <%= news.title %>
              </a>
            </th>
            <td><%= news.body %></td>
            <td><%= news.info %></td>
            <td><%= news.updated_at.strftime("%d.%m.%Y | %H:%M") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>